<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup for WanderLust</h1>
    <div class="col-6 offset-3">

        <form action="/signup" method="POST" >
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" class="form-control" type="text" id="username" required>
                <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" class="form-control" type="email" id="email" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" class="form-control" type="password" id="password" required>
            </div>

            <button type="submit" formmethod="post" class="btn btn-success">SignUp</button>
        </form>
        <p class="mt-2">Already have an account? <a href="/login">Login here</a></p>
    </div>
</div>
